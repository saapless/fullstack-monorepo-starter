{
  "name": "fullstack-monorepo-starter",
  "version": "1.0.0",
  "description": "Saapless fullstack turbo monorepo",
  "main": "turbo.json",
  "private": true,
  "author": "Saapless Team <dev@saapless.com>",
  "license": "MIT",
  "packageManager": "^npm@8.19.2",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.19.0",
    "yarn": "use-npm",
    "pnpm": "use-npm"
  },
  "scripts": {
    "test": "dotenvx run -- jest",
    "test:e2e": "dotenvx run -- npx playwright test",
    "test:ci": "dotenvx run -- jest --ci --silent",
    "coverage": "dotenvx run -- jest --coverage",
    "dev": "dotenvx run -- turbo dev",
    "build": "dotenvx run -- turbo build",
    "deploy": "dotenvx run -- turbo deploy",
    "remove": "dotenvx run -- turbo remove",
    "lint": "dotenvx run -- turbo lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@dotenvx/dotenvx": "^1.14.1",
    "@playwright/test": "^1.47.2",
    "@serverless/typescript": "^3.38.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jest": "^29.5.13",
    "@types/node": "^20",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-turbo": "^2.1.2",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "serverless": "^4.3.2",
    "ts-jest": "^29.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0"
  },
  "workspaces": [
    "apps/*",
    "apis/*",
    "packages/*"
  ]
}
